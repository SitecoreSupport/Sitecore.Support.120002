<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>

    <processors>
      <uiCloneItems>
        <processor patch:before="*[@method='RelinkClonedSubtree']" mode="on" type="Sitecore.Support.Shell.Framework.Pipelines.CloneItems.RemoveExtraVersions,Sitecore.Support.120002" method="Execute" />
      </uiCloneItems>
    </processors>

    <pipelines>
      <group name="itemProvider" groupName="itemProvider">
        <pipelines>
          <getItem>
            <processor type="Sitecore.Support.Pipelines.ItemProvider.GetItem.GetLanguageFallbackItem, Sitecore.Support.120002" patch:instead="processor[@type='Sitecore.Pipelines.ItemProvider.GetItem.GetLanguageFallbackItem, Sitecore.Kernel']" />
          </getItem>
        </pipelines>
      </group>
    </pipelines>

  </sitecore>
</configuration>